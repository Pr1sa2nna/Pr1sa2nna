n=int(input ('enter number:')) 
for I in range (1,n+1): 
     for k in range(n-i,0,-1): 
         print (" ",end=" ") 
     for j in range (1,I): 
         print ("*",end="    ") 
     Print("\n") 
for I in range (1,n+1): 
    for k in range (1,I): 
        print (" ",end="  ") 
    for j in range (n-i+1,0,-1): 
        print ("*",end="   ") 
     print ("\n")


