n=int(input ('enter n'))
l=[]
for I in range (1,n+1): 
    x=int(input ('enter elements'))
    l.append(x) 
odd=[] 
even=[]
for j in l: 
    if j%2==0: 
        odd.append(j) 
    else:
        even.append(j) 
print('odd list is',odd) 
Print('even list is',even) 



